{
	"compilerOptions": {
		"outDir": "./build/",
		"target": "es6",
		"keyofStringsOnly": true,
		"lib": [
			"es2019",
			"es2017",
			"es2016",
			"dom"
		],
		"module": "esnext",
		"moduleResolution": "node",
		"removeComments": false,
		"sourceMap": true,
		"jsx": "react",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"strict": true,
		"experimentalDecorators": true
	},
	"exclude": [
		"node_modules"
	],
	"include": [
		"./src/**/*"
	]
}